{
  "compilerOptions": {
    "target": "ES2020",                // Compile to modern JavaScript
    "module": "CommonJS",             // Use CommonJS modules (standard for Node.js)
    "rootDir": "./src",               // The root directory of our source files
    "outDir": "./dist",               // Where to output the compiled JavaScript
    "esModuleInterop": true,          // Allows compatibility with different module types
    "forceConsistentCasingInFileNames": true,
    "strict": true,                   // Enable all strict type-checking options
    "skipLibCheck": true              // Skip type checking of declaration files
  },
  "include": ["src"] // Only compile files in the 'src' directory
}